<% data.products.each do |product| %>
  <div class="card-wrapper">
    <div id="<%=product.tag%>Controls" class="carousel slide w-100" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item item active">
          <%= image_tag product.cover, class: "d-block w-100" %>
        </div>
        <% product.images.each do |img| %>
          <div class="carousel-item item">
            <%= image_tag img, class: "d-block w-100" %>
          </div>
        <% end %>
      </div>
      <a class="carousel-control-prev" href="#<%=product.tag%>Controls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#<%=product.tag%>Controls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    <div class="description">
      <h2> <%= product.name %> </h2>
      <p><span class="font-italic h6"><%= product.name %></span> <%= product.description %></p>
      <div class="d-flex justify-content-center w-100 btn-wrapper">
        <div class="btn-product d-flex justify-content-around w-50">
          <% link_to product.url, target: '_blank' do %>
            <span class="btn-url btn btn-outline-secondary badge-pill">view site</span>
          <% end %>
          <% link_to product.code, target: '_blank' do %>
            <i class="git-icon fab fa-github-alt btn btn-secondary badge-pill"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
